@using MrFixIt.ViewModels

@model RegisterViewModel

<h2>Register as a User</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    //How do you add classes to these?

    <div class="text-dark">@Html.LabelFor(m => m.Email)</div>
    @Html.TextBoxFor(m => m.Email, new { @required = "true" })

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { @required = "true" })

    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.PasswordFor(m => m.ConfirmPassword, new { @required = "true" })

    <input type="submit" value="Register" class="btn-pop" />
    }
